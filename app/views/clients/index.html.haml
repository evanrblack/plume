.container
  .text-center
    %h1 Clients
  - if @clients.any?
    %table.table.table-striped
      %thead
        %th First name
        %th Last name
        %th Phone number
        %th City
        %th Upcoming visits
        %th Unfilled visits
      %tbody
        - @clients.each do |cl|
          %tr
            %td= link_to cl.first_name, cl
            %td= link_to cl.last_name, cl
            %td= link_to cl.phone_number_formatted, "tel:#{cl.phone_number}"
            %td= cl.city
            %td
            %td
  %hr
  = link_to 'Add Client', new_client_path, class: 'btn btn-success'
